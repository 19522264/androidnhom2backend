generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  uid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
}
model userprofile{ 
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique 
  displayName String
  photoURL String
  spams String[]
}
model userlistchats{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  listchats String[]
}
model userlistfriends{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  listfriends String[]
}
model userSendingRequest{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  sendingRequests String[]
}
model userreceivedRequest{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  receivedRequest String[]
}
model biodetail{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  school String
}
model userbio{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  work String 
  school String
  relationship String
  birthDay DateTime @default(now())
}
