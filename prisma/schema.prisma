// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  uid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  confirm String
}
model userprofile{ 
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique 
  displayName String
  photoURL String
}
model userlistchats{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  listchats String[]
}
model userlistfriends{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  listfriends String[]
}
model userSendingRequest{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  sendingRequests String[]
}
model userreceivedRequest{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  receivedRequest String[]
}
model userbio{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  from String?
  school String?
  gender String?
  intro String?
  birthDay DateTime @default(now())
}
model lastestmessage{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  participants String[]
  text String
  createAt DateTime @default(now())
  system Boolean @default(false)
  sentBy String?
  sendTo String?
}
model messages {
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  id String
  participants String[]
  createAt DateTime @default(now())
  system Boolean @default(false)
  sentBy String?
  sendTo String?
  image String?
  video String?
  gif String?
  type String?
  text String?
}
model school{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  value String
}
model city{
  docid String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  value String
}